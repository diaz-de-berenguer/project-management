<div class="container-fluid">
	<div class="col-md-offset-2 col-md-8">

		<div class="row">
			<div class="col-md-6">
				<h2 class="pull-left">
					<small>Product</small><br>
					<%= @product.name %>
				</h2>
			</div>

			<div class="col-md-6">

				<div style="padding: 1em 1em 0">
	        <%= link_to product_all_path, class: "tooltipper pull-right", method: :delete, data:
					    { toggle: "tooltip", placement: "bottom" }, title: "All Products",
					    style: "margin-left: 3em" do %>
	        	<h2>
	        		<small>
	        		<span class="fa-stack">
	        		  <i class="fa fa-circle fa-stack-2x"></i>
	        		  <i class="fa fa-chevron-left fa-stack-1x fa-inverse"></i>
	        		</span>
	        		</small>
	        	</h2>
	        <% end %>

          <%= link_to edit_product_path, class: "tooltipper pull-right", data:
  				    { toggle: "tooltip", placement: "bottom" }, title: "Edit Product",
  				    style: "margin-left: 3em" do %>
          	<h2>
          		<small>
          		<span class="fa-stack">
          		  <i class="fa fa-circle fa-stack-2x"></i>
          		  <i class="fa fa-wrench fa-stack-1x fa-inverse"></i>
          		</span>
          		</small>
          	</h2>
          <% end %>
	      </div>
			</div>
		</div>

		<hr>

		<div class="row" style="padding-bottom:1em">
			<div class="col-md-12">
				<h3>Features:</h3>
			</div>
			<div class="col-md-4 col-xs-6">
				<%= link_to '#new-feature', data: { toggle: "collapse" } do %>
					<h3 class="pull-left" style="margin:-3px 7px 0">
						<i class="fa fa-plus-square-o" aria-hidden="true"></i>
					</h3>
					New Feature
				<% end %>
			</div>
			<div class="col-md-4 col-xs-6">
				<%= link_to '#completed-features', data: { toggle: "collapse" } do %>
					<h3 class="pull-left" style="margin:-3px 7px 0">
						<i class="fa fa-check-square-o" aria-hidden="true"></i>
					</h3>
					Show Completed (<%= @completed_features.count %>)
				<% end %>
			</div>
		</div>

		<div id="new-feature" class="collapse">
			<%= render 'features/form', feature: @product.features.build %>
		</div>

		<div id="completed-features" class="collapse">
			<% @completed_features.each do |f| %>
				<%= content_tag :div, id: "feature-#{f.id}" do %>
					<%= render 'features_loop', feature: f %>
				<% end %>
			<% end %>
		</div>

		<% @active_features.each do |f| %>
			<%= content_tag :div, id: "feature-#{f.id}" do %>
				<%= render 'features_loop', feature: f %>
			<% end %>
		<% end %>


	</div>
</div>

