<div class="container-fluid">
  <div class="col-md-offset-2 col-md-8">

    <div class="row">
      <div class="col-md-12">

        <h4>
          Products
          <%= link_to new_product_path, class: "pull-right" do %>
            <i class="fa fa-plus-circle" aria-hidden="true"></i>
            New Product
          <% end %>
        </h4>
      </div>
    </div>
    <hr>

    <table>
      <!-- <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead> -->

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <%= link_to active_product_path(product), method: :post do %>
              <h3><%= product.name %></h3>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
