<div class="container-fluid">
  <div class="col-md-offset-2 col-md-8">

    <div class="row">
      <div class="col-md-12">

        <h4>
          Projects
          <%= link_to new_project_path, class: "pull-right" do %>
            <i class="fa fa-plus-circle" aria-hidden="true"></i>
            New Project
          <% end %>
        </h4>
      </div>
    </div>
    <hr>

    <table>
      <!-- <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead> -->

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <%= link_to active_project_path(project), method: :post do %>
              <h3><%= project.name %></h3>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
